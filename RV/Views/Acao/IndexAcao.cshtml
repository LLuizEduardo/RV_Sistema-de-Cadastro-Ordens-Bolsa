@model List<AcaoModel>
@{
    ViewData["Title"] = "Ações";
}

<br />

<div class="text-center">
    <h1>Lista de ordens</h1>
</div>

<br />

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Data</th>
            <th scope="col">Papel</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Valor</th>
            <th scope="col">Ordem</th>
            <th scope="col">Corretora</th>
            <th scope="col"></th>
        </tr>
    </thead>


    @if (Model != null && Model.Any())
    {
        foreach (AcaoModel Acao in Model)
        {
            <tbody>
                <tr>
                    <td>@Acao.Data.ToString().Substring(0,10)</td>
                    <td>@Acao.Papel</td>
                    <td>@Acao.Quantidade</td>
                    <td>@Acao.Valor</td>
                    <td>@Acao.Ordem</td>
                    <td>@Acao.Corretora</td>
                    <td>
                        <a role="button" class="btn btn-primary btn-sm">Editar</a>
                        <a role="button" class="btn btn-danger btn-sm">Apagar</a>
                    </td>
                </tr>
            </tbody>
        }
    }

</table>