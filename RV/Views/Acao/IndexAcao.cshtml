@model List<AcaoModel>
@{
    ViewData["Title"] = "Ações";
}


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">x</button>
        @TempData["MensagemSucesso"]
    </div>
}

<br />

<div class="text-center">
    <h1 class="text-light">Lista de ordens</h1>
</div>

<br />

<body class="bg-dark">

    <div class="text-right">
        <a role="button" class="btn btn-primary btn-sm" asp-controller="Acao" asp-action="Salvar">Cadastrar nova</a>
    </div>
    <br />


    <table class="table table-dark table-striped rounded-sm">
        <thead>
            <tr>
                <th scope="col">Data</th>
                <th scope="col">Papel</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor</th>
                <th scope="col">Ordem</th>
                <th scope="col">Corretora</th>
                <th scope="col"></th>
            </tr>
        </thead>


        @if (Model != null && Model.Any())
        {
            foreach (AcaoModel Acao in Model)
            {
                <tbody>
                    <tr>
                        <td>@Acao.Data.ToString().Substring(0, 10)</td>
                        <td>@Acao.Papel</td>
                        <td>@Acao.Quantidade</td>
                        <td>@Acao.Valor</td>
                        <td>@Acao.Ordem</td>
                        <td>@Acao.Corretora</td>
                        <td>
                            <a role="button" asp-route-id="@Acao.Id" class="btn btn-primary btn-sm" asp-controller="Acao" asp-action="Editar">Editar</a>
                            <a role="button" asp-route-id="@Acao.Id" class="btn btn-danger btn-sm" asp-controller="Acao" asp-action="Apagar">Apagar</a>
                        </td>
                    </tr>
                </tbody>
            }
        }

    </table>
</body>
