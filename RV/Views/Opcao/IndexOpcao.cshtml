@model List<OpcaoModel>
@{
    ViewData["Title"] = "Opções";
}

<br />

<div class="text-center">
    <h1>Lista de ordens</h1>
</div>

<br />

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Data</th>
            <th scope="col">Opção</th>
            <th scope="col">Tipo</th>
            <th scope="col">Papel</th>
            <th scope="col">Strike</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Vencimento</th>
            <th scope="col">Valor</th>
            <th scope="col">Ordem</th>
            <th scope="col">Corretora</th>
            <th scope="col"></th>
        </tr>
    </thead>

    @if (Model != null && Model.Any())
    {
        foreach (OpcaoModel Opcao in Model)
        {
            <tbody>
                <tr>
                    <td>@Opcao.Data</td>
                    <td>@Opcao.Opcao</td>
                    <td>@Opcao.Tipo</td>
                    <td>@Opcao.Papel</td>
                    <td>@Opcao.Strike</td>
                    <td>@Opcao.Quantidade</td>
                    <td>@Opcao.Vencimento</td>
                    <td>@Opcao.Valor</td>
                    <td>@Opcao.Ordem</td>
                    <td>@Opcao.Corretora</td>
                    <td>
                        <a role="button" class="btn btn-primary btn-sm">Editar</a>
                        <a role="button" class="btn btn-danger btn-sm">Apagar</a>
                    </td>
                </tr>
            </tbody>
        }
    }

</table>