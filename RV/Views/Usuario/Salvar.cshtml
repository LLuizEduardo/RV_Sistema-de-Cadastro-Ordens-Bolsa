@model UsuarioModel
@{
    ViewData["Title"] = "Cadastro de usuarios";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">x</button>
        @TempData["MensagemErro"]
    </div>
}

<body class="bg-dark">
    <div class="text-center">
        <h1 class="text-light display-4"> Cadastro de usuarios</h1>
    </div>
    <br />
    <form asp-controller="Usuario" asp-action="Salvar" method="post">
        <div>
            <h3 class="text-light"> Cadastrar novos usuários</h3>
            <br />
            <div class="row">
                <div class="col">
                    <label class="text-light">Nome</label>
                    <input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <label class="text-light">E-mail</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Digite o e-mail">
                </div>
                <div class="col">
                    <label class="text-light">Perfil</label>
                    <select class="form-control" asp-for="Perfil">
                        <option selected> Selecione</option>
                        <option value="1"> Administrador</option>
                        <option value="2"> Padrão</option>
                    </select>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <label class="text-light">Login</label>
                    <input type="text" class="form-control" asp-for="Login" placeholder="Digite o login">
                </div>
                <div class="col">
                    <label class="text-light">Senha</label>
                    <input type="password" class="form-control" asp-for="Senha" placeholder="Digite a senha">
                </div>
            </div>
            <br />
            <button type="submit" asp-controller="Usuario" asp-action="Index" class="btn btn-secondary">Voltar</button>
            <button type="submit" asp-controller="Usuario" asp-action="Salvar" class="btn btn-primary">Salvar</button>
        </div>
    </form>
    <br />
</body>