@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

<body>
    <div class="container">
        <div class="row">
            <div>
                <div class="col p-5">
                    <img src="~/images/logo.png" alt="Alternate Text" class="rounded" />
                </div>
                <div>
                    <p class="font-weight-bold">Sistema Gerenciador de Renda Variável</p>
                </div>
            </div>
            <div class="p-4 d-flex justify-content-center" id="tela-login">
                <form class="p-4 border rounded bg-dark">
                    <div class="mb-3 text-light">
                        <h2>Login</h2>
                    </div>
                    <div class="col mb-3">
                        <label class="col-form-label text-light">Usuário</label>
                        <input type="email" class="form-control" name="user" placeholder="E-mail" />
                    </div>
                    <div class="col mb-3">
                        <label class="col-form-label text-light">Senha</label>
                        <input type="password" class="form-control" name="pass" placeholder="*****" />
                    </div>
                    <br />
                    <div class="text-center">
                        <div>
                            <a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Entrar</a>
                        </div>
                        <br />
                        <div>
                            <div>
                                <label class="text-light">ou</label>
                            </div>
                            <a asp-controller="Usuario" asp-action="Salvar">Cadastre-se</a>
                        </div>
                    </div>
                </form>
