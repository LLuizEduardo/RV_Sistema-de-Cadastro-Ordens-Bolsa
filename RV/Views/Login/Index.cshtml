@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

<body class="bg-dark">
    <div class="p-4 d-flex justify-content-center" id="tela-login">
        <form class="p-4 border rounded bg-light">
            <div class="mb-3">
                <h2>Login</h2>
            </div>
            <div class="mb-3">
                <label class="col-form-label">Usuário</label>
                <input type="email" class="form-control" name="user" placeholder="E-mail" />
            </div>
            <div class="mb-3">
                <label class="col-form-label">Senha</label>
                <input type="password" class="form-control" name="pass" placeholder="*****" />
            </div>
            <br />
            <div class="text-center">
                <div>
                    <a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Entrar</a>
                </div>
                <br />
                <div>
                    <div>
                        <label>ou</label>
                    </div>
                    <a asp-controller="Usuario" asp-action="Salvar">Cadastre-se</a>
                </div>
            </div>
        </form>
    </div>
</body>