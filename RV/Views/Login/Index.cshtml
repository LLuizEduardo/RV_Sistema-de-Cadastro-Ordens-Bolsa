@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

<body class="bg-dark">
    <div class="row d-flex justify-content-center" id="tela-login">
        <form>
            <br />
            <div>
                <div>
                    <h2 class="text-light">Login</h2>
                </div>
            </div>
            <div class="mb-3">
                <label class="col-form-label text-light">Usuário</label>
                <input type="email" class="form-control" name="user" placeholder="E-mail" />
            </div>
            <div class="mb-3">
                <label class="col-form-label text-light">Senha</label>
                <input type="password" class="form-control" name="pass" placeholder="*****" />
            </div>
            <br />
            <div class="text-center">
                <div>
                    <a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Entrar</a>
                </div>
                <br />
                <div>
                    <div class="text-light">
                        <label>ou</label>
                    </div>
                    <a asp-controller="Usuario" asp-action="Salvar">Cadastre-se</a>
                </div>
            </div>
        </form>
    </div>
</body>