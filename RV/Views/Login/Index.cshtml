@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

<body class="bg-dark">
    <br />
    <div>
        <h2 class="text-light">Login</h2>
    </div>
    <br />
    <div class="row" id="tela-login">
        <form>
            <div class="mb-3">
                <label class="col-form-label text-light">Usuário</label>
                <input type="email" class="form-control" name="user" placeholder="E-mail" />
            </div>
            <div class="mb-3">
                <label class="col-form-label text-light">Senha</label>
                <input type="password" class="form-control" name="pass" placeholder="*****" />
            </div>
            <br />
            <div class="text-center">
                <a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Login</a>
            </div>
        </form>
    </div>
</body>