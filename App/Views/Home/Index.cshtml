@model Workspace
@{
    ViewData["Title"] = "Página Inicial";
}

<body class="bg-dark">
    <div class="text-left">
        <h2 class="text-light">Resumo</h2>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <table class="table table-dark table-striped rounded-sm">
                <thead>
                    <tr>
                        <th scope="col">Papel</th>
                        <th scope="col">Quantidade</th>
                        <th scope="col">Preço Médio</th>
                        <th scope="col">Valor</th>
                    </tr>
                </thead>
                @if (Model != null && Model.TotalAcoes.Any())
                {
                    foreach (TotalAcoes Acao in Model.TotalAcoes)
                    {
                        <tbody>
                            <tr>
                                <td>@Acao.Papel</td>
                                <td>@Acao.Quantidade</td>
                                <td>@Acao.PrecoMedio.ToString("C2")</td>
                                <td>@Acao.Valor.ToString("C2")</td>
                            </tr>
                        </tbody>
                    }
                }
            </table>
        </div>
    </div>
    <br />
</body>